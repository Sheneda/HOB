<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFCFC"
        tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/id_hoblogo"
        android:layout_width="370dp"
        android:layout_height="465dp"
        android:backgroundTint="#E4E4E4"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hob_logo" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891">

            <ImageButton
                android:id="@+id/id_main_announcements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/custombtn_circle"
                android:src="@drawable/ic_news"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

            </ImageButton>

            <ImageButton
                android:id="@+id/id_main_bible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/custombtn_circle"
                android:src="@drawable/ic_bible"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

            </ImageButton>

            <ImageButton
                android:id="@+id/id_main_offering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@drawable/custombtn_circle"
                android:src="@drawable/ic_collection"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

            </ImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/id_maintext_offering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21dp"
                android:text="Offering"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/id_maintext_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Announcements"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/id_maintext_bible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="23dp"
                android:text="Bible"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.041">

            <TextView
                android:id="@+id/id_maintext_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:text="HOB Store"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/id_maintext_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Find HOB"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/id_maintext_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="About HOB"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.903">

            <ImageButton
                android:id="@+id/id_main_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/custombtn_circle"
                android:src="@drawable/ic_location"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

            </ImageButton>

            <ImageButton
                android:id="@+id/id_main_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custombtn_circle"
                android:src="@drawable/ic_shop"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

            </ImageButton>

            <ImageButton
                android:id="@+id/id_main_aboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/custombtn_circle"
                android:src="@drawable/ic_about"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

            </ImageButton>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>